<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="2dp"
    android:layout_height="120dp">

    <TextView
        android:layout_width="wrap_content"
        android:text="QSN:5214236"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:id="@+id/qsn"
        android:layout_height="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="hsdkjfbdskjfcbdsnbcnsmxbcnsnxbc nxnmxbcnxvcnbxvcnbvxncbvxnbcvxnbcvx"
        android:textSize="16dp"
        android:id="@+id/detail"
        android:layout_height="55dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:id="@+id/attach"
            android:src="@drawable/ic_attachment"
            android:layout_height="20dp" />

      <TextView
          android:layout_width="0dp"
          android:layout_height="25dp"
          android:textSize="10dp"
          android:id="@+id/attach_detail"
          android:layout_weight="2.3"
          android:text="2 Videos, 6 Photos"/>


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:id="@+id/datetime"
           android:src="@drawable/ic_datetime"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:textSize="10dp"
            android:id="@+id/datetime_details"
            android:layout_weight="3"
            android:text="Upload Date : 20 Nov,2017"/>
    </LinearLayout>
</LinearLayout>